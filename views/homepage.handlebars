can thumbs up 
show thumbs up amount -->

<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Name of Itinerary -->
      <a href="/project/{{project.id}}">{{project.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="Compass">&#129517;</span>
      <!-- Destination of Itinerary -->
      <span class="destination">{{format_destination itinerary.destination}}</span>
    </p>
      <p>
      <span for="img" aria-label="Magnifying">&#128270;</span>
      <!-- Landmark of Itinerary -->
      <span class="landmark">{{format_landmark itinerary.landmark}}</span>
    </p>
    <p>Posted by {{itinerary.user.name}} on {{format_date itinerary.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{itinerary.description}}
    </p>
  </div>
</div>
{{/each}}