<!-- Loop over each object in the itinerarys array -->
{{#each itinerary as |itinerary| }}
<div class="row mb-4 itinerary">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/itinerary/{{itinerary.id}}">{{itinerary.name}}</a>
    </h2>
    <!-- button to Thumbs up to rate itinerary-->
    <p>
        <button style="font-size:24px">Thumbs UP!<i class="fa fa-thumbs-up"></i></button>
      <!-- Pass comment/review value to the helper function -->
      <span class="comment">{{comment_value itinerary.comment_value}}</span>
      needed!
    </p>
    <p>Created by {{itinerary.user.name}} on {{format_date itinerary.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}
